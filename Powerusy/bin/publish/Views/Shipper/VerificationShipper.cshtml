                                        @Html.LabelFor(m => m.Entity.comment, "Comment", new { @class = "col-sm-2 col-form-label" })
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.TextAreaFor(model => model.Entity.comment, new { @class = "form-control", @rows = 4 })
                                </div>
                                <div class="col-md-2">
                                    <label class="col-sm-10 control-label ">

                                    </label>
                                </div>
                                <div class="col-md-3">

                                </div>
                            </div>
                            <br /> 
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="col-sm-10 control-label">

                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <button id="btnSave"
                                            class="btn btn-sm btn-primary"
                                            data-pdsa-action="save">
                                        <i class="glyphicon
           glyphicon-floppy-disk"></i>
                                        &nbsp;Approve
                                    </button>
                                    <button id="btnCancel"
                                            class="btn btn-sm btn-primary"
                                            formnovalidate="formnovalidate"
                                            data-pdsa-action="cancel">
                                        <i class="glyphicon
           glyphicon-remove-circle"></i>
                                        &nbsp;Cancel
                                    </button>
                                    <button id="btnReject"
                                            class="btn btn-sm btn-primary"
                                            formnovalidate="formnovalidate"
                                            data-pdsa-action="reject">
                                        <i class="glyphicon
           glyphicon-remove-circle"></i>
                                        &nbsp;Reject
                                    </button>
                                </div>
                                <div class="col-md-2">
                                    <label class="col-sm-10 control-label ">

                                    </label>
                                </div>
                                <div class="col-md-3">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

            @if (Model.IsListAreaVisible)
            {
                <!-- Current Shipment start -->
                <div class="wshipping-content-block">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-12">
                                <div class="order-list">
                                    <!-- BEGIN GRID AREA -->
                                    <div class="table-responsive">
                                        <table class="table table-condensed table-bordered table-striped table-hover" id="table">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>username</th>
                                                    <th>companyname</th>
                                                    <th>phonenumber</th>
                                                    <th>location</th>
                                                    <th>address</th>
                                                    <th>status</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.UsrLst)
                                                {
                                                    <tr>
                                                        <td class="pdsa-action-button-column">
                                                            <a href="#" data-pdsa-action="edit"
                                                               data-pdsa-val="@item.id"
                                                               class="btn btn-default btn-sm">
                                                                <i class="glyphicon glyphicon-edit">Click to View</i>
                                                            </a>
                                                        </td>
                                                        <td>@item.username</td>
                                                        <td>@item.companyname</td>
                                                        <td>@item.phonenumber</td>
                                                        <td>@item.location</td>
                                                        <td>@item.address</td>
                                                        @if (item.statusid == 1)
                                                        {
                                                            <td>Processing</td>
                                                        }
                                                        <td><a href="" title=""><i class="fa fa-check-circle" aria-hidden="true"></i></a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @if (Model.PageList != null)
                                        {
                                            @Html.PagedListPager(Model.PageList, page => Url.Action("VerificationShipper", new { page }))
                                        }

                                    </div>
                                    <!-- END GRID AREA -->
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Blog content end -->
            }
        </div>
    </div>
    <!-- Create New Shipment end -->
}
@section scripts {

    <script>
        $(document).ready(function () {
            $(document).ajaxStart(function () {
                $("#loading").show();
            });
            $(document).ajaxStop(function () {
                $("#loading").hide();
            });

            $("[data-pdsa-action]").on("click", function (e) {

                $("#loading").show();
                e.preventDefault();

                $("#EventCommand").val($(this).data("pdsa-action"));

                $("#EventArgument").val($(this).attr("data-pdsa-val"));

                $("form").submit();
                $.ajax({
                    type: frm.attr('method'),
                    url: frm.attr('action'),
                    data: frm.serialize(),
                    success: function (data) {
                        console.log('Submission was successful.');
                        console.log(data);
                    },
                    error: function (data) {
                        console.log('An error occurred.');
                        console.log(data);
                    },
                });
                $("#loading").hide();
            });
        });
    </script>
}