
<div class="col-xl-3 col-lg-4 col-md-12 col-sm-12">
    <div class="dashboard-navbar overlio-top">

        <div class="d-user-avater">
           
            @if (Session["LogoPath"] != null && !string.IsNullOrEmpty(Session["LogoPath"].ToString()))
            {
                <img src="~/upload/@Session["LogoPath"].ToString()" height="200" width="200" class="img-fluid rounded" alt="">
            }
            else
            {
                <img src="~/assets/img/team-1.jpg" height="200" width="200" class="img-fluid rounded" alt="">
            }
            <h4>@("Welcome "+ Session["fname"].ToString())</h4>
        </div>

        <div class="d-navigation">
            <ul id="metismenu">
                <li class="active">
                    @Html.ActionLink("Dashboard", "Dashboard", "Customer")
                </li>
                <li>@Html.ActionLink("My Profile", "MyProfile", "Customer")</li>

                <li>
                    @Html.ActionLink("Messages", "Messages", "Customer")
                </li>

                <li>@Html.ActionLink("Reviews", "Reviews", "Customer")</li>

                <li>
                    <a href="javascript:void(0);" class="has-arrow" aria-expanded="false"><i class="ti-desktop"></i>Tasks</a>
                    <ul>
                        <li>
                            @Html.ActionLink("Post A Job", "ManageJobs", "Customer")
                        </li>
                        <li>@Html.ActionLink("Manage Bidders", "Managebidders", "Customer")</li>
                        <li>@Html.ActionLink("My Active Bids", "Activebids", "Customer")</li>
                    </ul>
                </li>
                <li><a href="#"><i class="ti-power-off"></i>Log Out</a></li>
            </ul>
        </div>

    </div>
</div>