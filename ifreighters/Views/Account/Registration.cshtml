@model PowerusyData.RegistrationViewModel

@{
    ViewBag.Title = "Registration";
}

<!-- ============================ Page Title Start================================== -->
<div class="page-title inner-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <h2 class="ipt-title">Registrations</h2>

            </div>
        </div>
    </div>
    <div class="ht-80"></div>
</div>
<!-- ============================ Page Title End ================================== -->
<!-- ============================ Main Section Start ================================== -->
<section class="pt-0">
    <div class="container overlio-top">
        <div class="row">

            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="contact_side overlio-top">

                    <div class="ct_cmp_social">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>

                    <div class="ct_cmp_caption">
                        <h4 class="mb-0">Get in Touch.</h4>
                        <p>Get in touch via mail, call and direct address.</p>
                    </div>

                    <div class="ct_cmp_address">
                        <div class="ct_cmp_single">
                            <div class="ct_cmp_single_icon"><i class="ti-location-pin"></i></div>
                            <div class="ct_cmp_brief">
                                <h5>Reach Us:</h5>
                                <span>Amodu Ojikutu St. Victoria Island 106104,<br /> Lagos Nigeria</span>
                            </div>
                        </div>
                        <div class="ct_cmp_single">
                            <div class="ct_cmp_single_icon"><i class="fa fa-envelope"></i></div>
                            <div class="ct_cmp_brief">
                                <h5>Drop a mail:</h5>
                                <span>support@ifreighters.com</span>
                            </div>
                        </div>
                        <div class="ct_cmp_single">
                            <div class="ct_cmp_single_icon"><i class="fa fa-phone"></i></div>
                            <div class="ct_cmp_brief">
                                <h5>Call Us:</h5>
                                <span>+234 803 000 0000</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Item Wrap Start -->
            <div class="col-lg-8 col-md-8 col-sm-12">
                @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <!-- BEGIN HIDDEN FIELDS AREA -->
                    @Html.HiddenFor(m => m.EventCommand)
                    @Html.HiddenFor(m => m.Mode)
                    @Html.HiddenFor(m => m.EventArgument)
                    <!-- END HIDDEN FIELDS AREA -->
                    <!--start Loading panel-->
                    <!-- END HIDDEN FIELDS AREA -->
                    <!--start Loading panel-->
                    <div id="loading" class="modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class=" modal-title">Loading... </h4>
                                </div>
                                <div class=" modal-body">
                                    <div class=" progress progress-striped active">
                                        <div class="progress-bar" style="width:100%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form class="contact_row">

                        <div class="form_row_box">
                            <div class="form_row_header">
                                <div class="form_row_header_flex"><img src="assets/img/email.svg" class="img-fluid" width="52" alt="" /></div>
                                @*<div class="form_row_header_right">
                                        <p>Write as a few words about your query and we'll prepare your query for you within <strong>24</strong> hours and inform you shortly.</p>
                                    </div>*@
                            </div>
                            <div class="form_row_box_body">
                                <div class="row">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        @if (!Model.IsValid)
                                        {
                                            <div class="alert alert-danger
                    alert-dismissable"
                                                 role="alert">
                                                <button type="button" class="close"
                                                        data-dismiss="alert">
                                                    <span aria-hidden="true">
                                                        &times;
                                                    </span>
                                                    <span class="sr-only">Close</span>
                                                </button>
                                                @Html.ValidationSummary(false)
                                            </div>
                                        }
                                        @if (TempData["Msg"] != null)
                                        {
                                            <div class="alert alert-dismissable alert-success">
                                                <button type="button" class="close" data-dismiss="alert">
                                                    x
                                                </button>
                                                @TempData["Msg"].ToString()
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="form-row">

                                    <div class="col-lg-6 col-md-12">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Entity.firstname, new { @class = "form-control with-light", placeholder = "First Name" })
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <label>Last Name:</label>
                                        @*<input type="text" class="form-control with-light" placeholder="Last Name" />*@
                                        @Html.TextBoxFor(m => m.Entity.lastname, new { @class = "form-control with-light", placeholder = "Last Name" })
                                    </div>


                                    <div class="col-lg-6 col-md-12">
                                        <label>Middle Name:</label>
                                        @Html.TextBoxFor(m => m.Entity.middlename, new { @class = "form-control with-light", placeholder = "Middle Name" })
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <label>Account Type:</label>
                                        @Html.DropDownListFor(m => m.ActionTypeId, new SelectList(Model.List, "Value", "Text"), new { @class = "form-control" })

                                    </div>

                                    <div class="col-lg-6 col-md-12">
                                        <label>Email:</label>
                                        @*<input type="text" class="form-control with-light" placeholder="" />*@
                                        @Html.TextBoxFor(m => m.Entity.email, new { @class = "form-control with-light", placeholder = "Email" })
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <label>Phone:</label>
                                        @Html.TextBoxFor(m => m.Entity.phonenumber, new { @class = "form-control with-light", placeholder = "Phone" })
                                    </div>


                                    <div class="col-lg-6 col-md-12">
                                        <label>Password:</label>
                                        @Html.PasswordFor(m => m.Entity.password, new { @class = "form-control with-light", placeholder = "" })
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <label>Confirm Password:</label>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control with-light", placeholder = "" })
                                    </div>
                                    <label>Logo</label>
                                    <br /><br />
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <div class="custom-file">
                                                <input class="form-control required" type="file" id="@Model.uploadedImage" name="uploadedImage" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12">
                                        
                                        <div class="form-group">
                                            <button type="button" class="btn dark-3" data-pdsa-action="save">Registration</button>
                                            @*<button id="btnSave"
                    class="btn btn-submit"
                    data-pdsa-action="save">
                <i class="glyphicon glyphicon-floppy-disk"></i>
                &nbsp;Registration
            </button>*@
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </form>
                }
            </div>

        </div>
    </div>
</section>
<!-- ============================ Main Section End ================================== -->
@section scripts {

    <script>
        $(document).ready(function () {
            $(document).ajaxStart(function () {
                $("#loading").show();
            });
            $(document).ajaxStop(function () {
                $("#loading").hide();
            });

            $("[data-pdsa-action]").on("click", function (e) {

                $("#loading").show();
                e.preventDefault();

                $("#EventCommand").val($(this).data("pdsa-action"));

                $("#EventArgument").val($(this).attr("data-pdsa-val"));

                $("form").submit();
                $.ajax({
                    type: frm.attr('method'),
                    url: frm.attr('action'),
                    data: frm.serialize(),
                    success: function (data) {
                        console.log('Submission was successful.');
                        console.log(data);
                    },
                    error: function (data) {
                        console.log('An error occurred.');
                        console.log(data);
                    },
                });
                $("#loading").hide();
            });
        });
    </script>
}